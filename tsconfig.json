{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2018"],
    "module": "commonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
    },
    "strict": true,
    "target": "ES6"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
}
